<section>
    <div class="row" style="height: 240%;">
        <div class="col-md-3">
            <div class="contact-info">
                <h2>Bienvenido</h2>
                <div style="font-size: 1em; display:flex; justify-content: center; flex-direction: column">
                    <h6> <strong>Nombre: </strong><%= nombre %></h6>
                    <h6> <strong>Direccion: </strong><%= direccion %></h6>
                    <h6> <strong>Edad: </strong><%= edad %> </h6>
                    <h6> <strong>Email: </strong><%= email %></h6>
                </div>
            </div>
            <div>
                <button class="btn btn-default" onclick="location.href='/logout'">Desloguear</button>
            </div>
        </div>
        <div class="col-md-9">
            <div class="contact-form">
                <div style="display:flex; align-items: flex-end; height: 30vh; justify-content: space-between; flex-direction: column-reverse">
                    <button class="btn btn-warning" onclick="location.href=`/api/carrito/<%= id %>/productos`">Ver Carrito</button>
                    <button class="btn btn-warning" onclick="location.href='/api/productos'">Ver Productos</button>
                </div>
            </div>
        </div>
    </div>
</section>
<br>